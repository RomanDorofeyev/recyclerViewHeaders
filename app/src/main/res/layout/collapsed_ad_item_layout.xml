<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_section_collapsed_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collapsed_ad_layout"
    android:animateLayoutChanges="true"
    android:background="@color/recyclerCollapsedAdBackground"
    android:paddingStart="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="5dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/ad_content"
        android:layout_width="217dp"
        android:layout_height="130dp"
        android:background="@drawable/box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/advertisement_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Sponsored"
            android:textColor="@color/whiteColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/learn_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ad_content"
            android:background="@drawable/box_without_background"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:text="Learn more"
            android:textColor="@color/whiteColor"
            android:textSize="14sp"

            />

</androidx.constraintlayout.widget.ConstraintLayout>